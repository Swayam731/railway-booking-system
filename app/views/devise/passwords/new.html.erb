<style>
  body{
    background-color: lightblue;
  }
  table{
    text-align: center;
    margin: auto;
  }
  .container{
    width: 500px;
    height: 280px;
    text-align: center;
    border: 3px solid #fc8803;
    border-radius: 7px;
    background-color: #ffffff;
    margin: 120px auto;
    box-sizing: border-box;
    
  }

</style>

<div class="container">
<h2 class="heading"> Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <table>
    <tr>
    <td><%= f.label :email %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
    <td><%= f.submit "Send me reset password instructions" %></td>
    </tr>
  </table>
<% end %>
<%= render "devise/shared/links" %>
</div>
